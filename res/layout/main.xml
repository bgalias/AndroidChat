<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:id="@+id/tableLayout"
	android:stretchColumns="1" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

	<TableRow android:id="@+id/tableRow_banner"
		android:paddingBottom="30dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:gravity="center_horizontal">
		<TextView android:text="LÃ¼fins Chat" android:textSize="30sp"
			android:id="@+id/textView_banner" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</TableRow>

	<TableRow android:id="@+id/tableRow_username"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:text="Benutzername:" android:id="@+id/textView_username"
			android:textSize="20sp" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<EditText android:layout_width="wrap_content"
			android:gravity="right" android:layout_height="wrap_content"
			android:text="" android:id="@+id/editText_username" />
	</TableRow>

	<TableRow android:id="@+id/tableRow_port"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:text="Port:" android:id="@+id/textView_port"
			android:textSize="20sp" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<EditText android:layout_width="wrap_content"
			android:gravity="right" android:layout_height="wrap_content"
			android:text="" android:id="@+id/editText_port" />
	</TableRow>

	<TableRow android:id="@+id/tableRow_buttons"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingTop="30dip">
		<Button android:text="Client" android:id="@+id/button_client"
			android:layout_weight="1" android:layout_width="0dip"
			android:layout_height="wrap_content" />
		<Button android:text="Server" android:id="@+id/button_server"
			android:layout_weight="1" android:layout_width="0dip"
			android:layout_height="wrap_content" />
	</TableRow>

</TableLayout>